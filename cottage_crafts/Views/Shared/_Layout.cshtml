<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - cottage_crafts</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/style.css" />


    <!-- bootstrap link -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>

    <!-- bootstrap link -->
    <!-- icons -->
    <link href='https://unpkg.com/boxicons@2.1.2/css/boxicons.min.css' rel='stylesheet'>
    <!-- icons -->

</head>
<body>
 
    <!-- navbar top -->
    <div class="container">
        <div class="navbar-top">
            <div class="logo">
                <h3>COTTAGE CRAFTS :))</h3>
            </div>
        </div>
    </div>
    <!-- navbar top -->
    <!-- main content -->
    <div class="main-content">
        <nav class="navbar navbar-expand-md" id="navbar-color">
            <div class="container-fluid">
                

                <!-- Navbar links -->
                <div class="collapse navbar-collapse" id="collapsibleNavbar">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" href="https://localhost:44315/Crafts">Home</a>
                        </li>
                        <!--<li class="nav-item">
                            <a class="nav-link" asp-controller="Crafts" asp-action="Index">Shop</a>
                        </li>-->
                        @if(User.Identity.IsAuthenticated){
                            <li class="nav-item">
                                <a class="nav-link" asp-action="LogOut" asp-controller="Account">Logout</a>
                            </li>
                        }
                        @if(User.Identity.Name == "Admin"){
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Crafts" asp-action="Index">Admin Panel</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </div>
    <!-- main content -->
    


    <div class="container-fluid">
        <main role="main" class="pb-6">
            @RenderBody()
        </main>

    </div>
    @RenderSection("Scripts",required:false);
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

</body>
</html>
