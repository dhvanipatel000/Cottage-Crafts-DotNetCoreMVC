@model IEnumerable<cottage_crafts.Models.Crafts>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>
<h3 style="color:brown" ;>@TempData["msg"]</h3>
@if (User.Identity.Name == "Admin")
{
    <p>
        <a asp-action="Create">Create New</a>
    </p>
}
<table class="table">
    <thead>
        <tr>
            <th>
                Product Name:
            </th>
            <th>
               Product Price:
            </th>
            <th>
                Product Description:
            </th>
            <th>
                Product Image URL:
            </th>
            <th>
                Product Category:
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.cname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.cprice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.cdesc)
            </td>
            <td>
                    <img src="@Html.DisplayFor(modelItem => item.cimg)" width="30%" height="30%">
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ccategory)
            </td>
                @if (User.Identity.Name != "Admin")
                {
                    <td>
                        <a href="https://localhost:44315/Home">Buy Now</a>
                    </td>
                }
             @if (User.Identity.Name == "Admin"){
            <td>
                <a asp-action="Edit" asp-route-id="@item.cid">Edit</a> |
                <a asp-action="Delete" asp-route-id="@item.cid">Delete</a>
            </td>
             }
             
        </tr>
}
    </tbody>
</table>
